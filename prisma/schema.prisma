generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  firstName    String
  lastName     String
  imageUrl     String
  portfolioUrl String?
  address      Address?
  reputation   Int      @default(0)
  createdAt    DateTime @default(now())
}

type Address {
  street String
  city   String
  state  String
  zip    String
}
