{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    /* Modules */
    "module": "esnext",
    "moduleResolution": "bundler",
    /* Emit */
    "noEmit": true,
    /* JavaScript Support */
    "allowJs": true,
    /** Editor Support */
    "plugins": [{ "name": "next" }],
    /* Projects */
    "incremental": true

  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
