{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    /* Modules */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    /* Interop Constrains */
    "verbatimModuleSyntax": true
  }
}
